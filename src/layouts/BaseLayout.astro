---
// filepath: c:\Users\gregw\retrograde-meridian\src\layouts\BaseLayout.astro
import Sidebar from '../mysteries/retrograde-meridian/components/Sidebar.astro';
import VisitTracker from '../mysteries/retrograde-meridian/components/VisitTracker.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  pageId: string;
}

const { title, pageId } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Play interactive mystery detective games. Solve cases, interview suspects, and uncover clues in With the Candlestick Mysteries.">
  <meta name="keywords" content="mystery game, detective game, interactive fiction, whodunit, puzzle game, online mystery, case solving, crime game">
  <meta name="author" content="With the Candlestick Mysteries">
  
  <!-- Open Graph tags for social sharing -->
  <meta property="og:title" content="{title} | With the Candlestick Mysteries">
  <meta property="og:description" content="Interactive mystery detective game where you solve cases and uncover clues">
  <meta property="og:type" content="website">
  <meta property="og:url" content={`https://withthecandlestickmysteries.com${Astro.url.pathname}`}>
  <meta property="og:image" content="https://withthecandlestickmysteries.com/assets/rules.jpg">
  
  <!-- Canonical URL -->
  <link rel="canonical" href={`https://withthecandlestickmysteries.com${Astro.url.pathname}`}>

   <!-- Favicon -->
  <link rel="icon" href={`/favicon.ico`}>


  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-65QXKQK4RX"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-65QXKQK4RX');
  </script>
  
  <title>{title} | With the Candlestick Mysteries</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Special+Elite&display=swap" rel="stylesheet">
</head>
<body>
  <div class="banner">
    <span class="case-title">Case 1: Where's Wesley</span>
    <div class="banner-buttons">
      <a href={baseUrl || '/'} class="home-button">Home</a>
    </div>
  </div>
  <button class="menu-toggle" id="menuToggle">â˜° Menu</button>
  
  <div class="container">
    <Sidebar mysteryId="retrograde-meridian" />
    <main class="main-content">
      <slot />
    </main>
  </div>

  <VisitTracker pageId={pageId} mysteryId="retrograde-meridian" />
</body>
</html>