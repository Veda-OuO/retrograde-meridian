---
import Layout from './_layout.astro';

interface Props {
  mysteryId: string;
}
const { mysteryId } = Astro.props;
---

<Layout title="Fred Wells" pageId="fredwells" mysteryId={mysteryId} backgroundImage="/assets/fwells.jpg">

  <div class="title">Fred Wells</div>
  <div class="text-box">
    <p>Asking around the scene, Fred claimed to feel ill and was last spotted heading back to his room after the conclusion of the 3 pm meeting.</p>
    <p>&nbsp;</p>
    <p>He then reappeared briefly at dinner, and no one has seen him since.</p>
  </div>
</Layout>

<style>
  .title {
    font-size: 100px;
    color: rgb(255, 166, 0);
    text-shadow: 0 0 10px rgb(0, 0, 0);
    padding: 10px;
    margin-bottom: 20px;
  }

  /* Media queries for responsive design */
  @media (max-width: 768px) {
    .title {
      font-size: 40px;
      margin-top: 50px;
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: 30px;
    }
  }
</style>