---
import Layout from './_layout.astro';

interface Props {
  mysteryId: string;
}
const { mysteryId } = Astro.props;
---

<Layout title="Something" pageId="something" mysteryId={mysteryId} backgroundImage="/assets/aflanders.jpg">

  <div class="title">Allen Flanders</div>
  <div class="text-box">
    <p>Asking around the scene, Allen is said to have been the only one to meet with Mr. Range following the conclusion of the afternoon meeting. No one has seen him since.</p>
  </div>
</Layout>

<style>
  .title {
    font-size: 100px;
    color: rgb(255, 166, 0);
    text-shadow: 0 0 10px rgb(0, 0, 0);
    padding: 10px;
    margin-bottom: 20px;
  }

  /* Media queries for responsive design */
  @media (max-width: 768px) {
    .title {
      font-size: 40px;
      margin-top: 50px;
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: 30px;
    }
  }
</style>